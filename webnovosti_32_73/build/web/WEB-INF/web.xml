<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    <servlet>
        <servlet-name>Dodavanje</servlet-name>
        <servlet-class>servleti.Dodavanje</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Izmjena</servlet-name>
        <servlet-class>servleti.Izmjena</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>servleti.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>servleti.Logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DodavanjePost</servlet-name>
        <servlet-class>servleti.DodavanjePost</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DodavanjeKomentar</servlet-name>
        <servlet-class>servleti.DodavanjeKomentar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>IzmjenaPost</servlet-name>
        <servlet-class>servleti.IzmjenaPost</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BrisiPost</servlet-name>
        <servlet-class>servleti.BrisiPost</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Dodavanje</servlet-name>
        <url-pattern>/Dodavanje</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Izmjena</servlet-name>
        <url-pattern>/Izmjena</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/Logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DodavanjePost</servlet-name>
        <url-pattern>/DodavanjePost</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DodavanjeKomentar</servlet-name>
        <url-pattern>/DodavanjeKomentar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>IzmjenaPost</servlet-name>
        <url-pattern>/IzmjenaPost</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BrisiPost</servlet-name>
        <url-pattern>/BrisiPost</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>/faces/*</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>faces/index.xhtml</welcome-file>
        <welcome-file>listaPostova.jsp</welcome-file>
    </welcome-file-list>
</web-app>
